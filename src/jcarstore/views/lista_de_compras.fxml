<AnchorPane id="AnchorPane" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jcarstore.controllers.TelaListaComprasController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER" prefHeight="42.0" prefWidth="655.0" style="-fx-background-color: #fe4451;" VBox.vgrow="ALWAYS">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 2em; -fx-font-family: Quicksand; -fx-font-weight: bold; -fx-fill: white;" text="Lista de Compras" />
               </children>
            </HBox>
            <TableView fx:id="tableView" prefHeight="346.0" prefWidth="655.0" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="columID" prefWidth="54.0" text="ID" />
                <TableColumn fx:id="columModelo" prefWidth="104.0" text="Modelo" />
                  <TableColumn fx:id="columMarca" prefWidth="91.0" text="Marca" />
                  <TableColumn fx:id="columAno" prefWidth="74.0" text="Ano" />
                  <TableColumn fx:id="columDescricao" prefWidth="116.0" text="Descrição" />
                  <TableColumn fx:id="columPrecoVenda" prefWidth="120.0" text="Preço de Venda" />
                  <TableColumn fx:id="columFoto" prefWidth="93.0" text="Foto" />
              </columns>
            </TableView>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="50.0" prefWidth="655.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="btnComprar" mnemonicParsing="false" onAction="#ComprarVeiculo" prefWidth="180.0" style="-fx-background-color: #ff3b49; -fx-background-radius: 100px; -fx-text-fill: white;" text="Comprar">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
